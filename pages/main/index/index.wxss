/* manger */

.tabBar {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 50px;
    background-color: #37414a;
    z-index: 100;
}

.tabBar-menu {
    display: -webkit-inline-flex;
    display: inline-flex;
    width: 25%;
    height: 100%;
    flex-direction: column;
    margin: 0 0;
    align-items: center;
    justify-content: center;
}

.tarBar-text {
    font-size: 14px;
    color: #8a8a8a;
}

.tarBar-text_active {
    font-size: 14px;
    color: #fff;
}

.image {
    margin-top: 2px;
    z-index: 10100;
    width: 25px;
    height: 25px;
}

.main {
    margin-bottom: 50px;
}

.manger-head {
    display: -webkit-inline-flex;
    display: inline-flex;
    height: 100px;
    width: calc(50% - 0.5px);
    background-color: #fff;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-bottom: 15px;
}

.manger-head-border {
    border-right: 1px solid #f8f8f8;
}

.manger-head-content {
    font-size: 30px;
    color: #76a6e9;
}

.page {
    background-color: #fff;
}

.border {
    border-color: #f8f8f8;
}

/* setting */

.setting-head {
    margin-top: 15px;
}

.setting-body {
    margin: 10px 0;
}

.setting-foot {
    margin-bottom: 10px;
}

.setting-btn {
    width: 90%;
    margin: 50px auto 0;
}

.setting-phone {
    color: #76a6e9;
    text-align: center;
}

/* handle */

/* page, .page, .page__bd {
    height: 100%;
} */

.page__bd {
    padding-bottom: 0;
}

.topbar {
    background-color: #fff;
}

.weui-form-preview {
    margin-top: 15px;
}

.order-item {
    text-align: left;
    margin: 4px 0 0 100px;
}

.showdetail {
    width: 32px;
    height: 24px;
    display: inline-block;
    margin: 0 auto;
}

.detail-block {
    position: relative;
    border-top: 1px #f8f8f8 solid;
    margin: 0 20px;
    height: 70px;
}

.detail-image {
    display: inline-block;
    width: 50px;
    height: 50px;
    margin: 10px 0 0 0;
}

.detail-title {
    position: absolute;
    top: 10px;
    left: 80px;
    right: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.detail-price {
    position: absolute;
    top: 40px;
    left: 80px;
    color: red;
    font-size: 15px;
}

.detail-count {
    position: absolute;
    top: 40px;
    left: 80%;
    color: #999;
    font-size: 14px;
}

.order-tip {
    text-align: center;
    margin: 0 0;
    font-size: 20px;
    color: #76a6e9;
}

.red{
    color:red;
}